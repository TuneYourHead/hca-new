section.contact-page
  .section-wrapper
    form.contact-page-form.contact-page_quote
      h3.contact-page-form-title.section-title request a quote
      p.contact-page-form-subtitle For estimates, please contact us at your convenience. It's an honor to help you make your sports dream a reality. 
      input(type='hidden', name='formsubject' value='Request a Quote')
      div
        input#contact-page-form-name.contact-us-input(type='name', required='', name='name')
        label(for='contact-page-form-name')
          | Name 
          span.label-accent *
      div
        input#contact-page-form-email.contact-us-input(type='email', required='', name='email')
        label(for='contact-page-form-email')
          | Email
          span.label-accent *
      div
        input#contact-page-form-zipcode.contact-us-input.zip-code(type='text', required='', name="address", maxlength='5')
        label(for='contact-page-form-zipcode')
          | Zipcode
          span.label-accent *
      div
        input#contact-page-form-phone.contact-us-input.phone(type="text", name="phone", maxlength='10')
        label(for='contact-page-form-phone')
          | Phone
      div
        input#contact-page-form-client_residential(type='radio', name='client')
        label(for='contact-page-form-client_residential')
          | Residential
        input#contact-page-form-client_commercial(type='radio', name='client')
        label(for='contact-page-form-client_commercial')
          | Commersial
      div
        input#contact-page-form-court-type_indoor(type='radio' name='court-type')
        label(for='contact-page-form-court-type_indoor')
          | Indoor
        input#contact-page-form-court-type_outdoor(type='radio' name='court-type')
        label(for='contact-page-form-court-type_outdoor')
          | Outdoor
      div
        textarea#contact-page-form-textarea(name='message')
        label(for='contact-page-form-textarea')
          | Message
      .g-recaptcha
      input.link-button.link-button-lightbg(type='submit' value='submit')
    form.contact-page-form.contact-page_inquiry  
      h3.contact-page-form-title.section-title general inquiry
      p.contact-page-form-subtitle Please use the form below for general questions, comments, and feedback. 
      input(type='hidden', name='formsubject' value='General Inquiry')
      div
        input#contact-page-form-name_inquiry.contact-us-input(type='name', required='', name='name')
        label(for='contact-page-form-name_inquiry')
          | Name 
          span.label-accent *
      div
        input#contact-page-form-email_inquiry.contact-us-input(type='email', required='', name='email')
        label(for='contact-page-form-email_inquiry')
          | Email
          span.label-accent *
      div
        input#contact-page-form-zipcode_inquiry.contact-us-input.zip-code(type='text', required='', name="address", maxlength='5')
        label(for='contact-page-form-zipcode_inquiry')
          | Zipcode
          span.label-accent *
      div
        textarea#contact-page-form-textarea_inquiry(name='message')
        label(for='contact-page-form-textarea_inquiry')
          | Message
      .g-recaptcha
      input.link-button.link-button-lightbg(type='submit' value='submit')
